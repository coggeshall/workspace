#!/bin/bash

bindir=$(dirname $(realpath $0))
utildir=$(realpath "${bindir}/../share/novnc/utils")
webdir=$(realpath "${bindir}/../share/novnc")

xinit /etc/X11/Xsession startxfce4 -- /usr/local/bin/Xvnc :1 -depth 24 -desktop Desktop-GUI -geometry 1600x900 -pn -SecurityTypes None -rfbport 5901 -rfbwait 30000&
sleep 5
${utildir}/novnc_proxy --vnc localhost:5901 --listen localhost:6901
sleep 5
